<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rudy.myplace.MainActivity"
    tools:showIn="@layout/activity_main">

    <!-- LIGNE 1 DU MENU -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/button_add"
            android:drawableTop="@drawable/location"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            />
        <Button
            android:id="@+id/buttonList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/button_list"
            android:drawableTop="@drawable/list"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            />
    </LinearLayout>

    <!-- LIGNE 2 DU MENU -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/button_about"
            android:drawableTop="@drawable/information"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            />
        <Button
            android:id="@+id/buttonLeave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/button_leave"
            android:drawableTop="@drawable/quit"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            />
    </LinearLayout>
</LinearLayout>
